{
  
   "version": "0.1.0",

   // Start PowerShell
   "command": "${env.windir}\\sysnative\\windowspowershell\\v1.0\\PowerShell.exe",

   // The command is a shell script
   "isShellCommand": true,

   // Show the output window always
  "showOutput": "always",

  "args": [
      "-NoProfile", "-ExecutionPolicy", "Bypass"
  ],

  "tasks": [
	  
	{
		"taskName": "Launch"	  
	},
    {
      // Notes
      // Task outputs site to JekyllBlog_Site
      
      //Build Task
      "taskName": "build",
      //Run On Shift+Ctrl+B
      "isBuildCommand": true,
      //Don't run when Shift+Ctrl+T
      "isTestCommand": false,
      // Show the output window if error any
      "showOutput": "silent",
      //Npm Task Name
      "args": [
        "jekyll",
        "build",
        "--destination",
        "C:\\Users\\lukem\\Documents\\GitHub\\JekyllBlog_Site"
        
        
      ]
    },
    {
      
      
      "taskName": "publish",
      "suppressTaskName": true,
      "showOutput": "always",
      "args": [
        "${cwd}\\DeploySiteToS3.ps1"        
      ]
      
    }
  ]


}


